---
import Spain from "../Icons/Spain.astro";
import ProfileCard from "./Cards/ProfileCard.astro";
---

<main class="text-center pt-10 md:pt-16 md:max-w-4xl mx-auto px-4 h-[100vh]">
    <p class="hero-subtitle  uppercase">
        <span class="text-[#eb4423] md:text-lg text-base">ATENCIÓN</span> <span class="md:text-lg text-base">DUEÑO DE CLÍNICA DENTAL</span>
    </p>
    
    <h1 class="mb-5 hero-title px-2">
        <span class="font-oswald text-[24px] md:text-[40px] font-bold uppercase">
            RECIBE UNA
        </span>
        <span class="font-oswald text-[24px] md:text-[40px] font-bold uppercase drop-shadow-[0_0_30px_rgba(1,219,176,0.2)] bg-[#039683]/10 px-2 py-2 rounded-md inline-block border-3 border-[#01dbb0]/30">
            AUDITORÍA DE MARKETING  <span class="text-[#01dbb0]">GRATUITA</span>
        </span>
    </h1>

    <p class="font-oswald text-[22px] md:text-[40px] font-bold uppercase">
        <span>Y APRENDE COMO CONVERTIR TU</span>
        <div class="flex items-center flex-col md:flex-row justify-center gap-2">
            <p class="font-oswald text-[22px] md:text-[40px] font-bold uppercase">CONSULTORIO EN EL <span class="text-[#eb4423]">#1 DE ESPAÑA</span></p> 
            <span class="rotate-[-8deg] inline-block">
             <Spain width="42" height="42"/> 
            </span>
        </div>
        
        <!-- add flag spain on icons -->
    </p>

    <!-- CTA Section -->
    <div class="max-w-2xl mx-auto">
        <!-- Profile Section -->
            
        <div class="flex flex-col items-center justify-center gap-1 mb-8">
            <div class="flex gap-3 items-center flex-col md:flex-row mt-3">
                <p class="text-base md:text-xl text-gray-400">Trabaja directamente con</p>
                <ProfileCard />
            </div>
               
            <p class="text-base md:text-xl text-gray-400">
                para potenciar el marketing de tu consultorio.
            </p>
        </div>
        </div>

        <!-- CTA Button -->
        <button class="w-[75%] py-5 px-10 font-oswald border-[#f7b034] border-3 font-bold text-[#0a0a0a] bg-[#ffd60a] rounded-lg cursor-pointer transition-all duration-300 hover:scale-105 active:scale-105 relative overflow-hidden group relative before:absolute before:left-[60px]" id="button-cta">
            <span class="absolute inset-0 bg-gradient-to-r from-transparent via-white/80 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-500"></span>
            <span class="relative text-base">APLICAR A UNA AUDITORÍA AHORA</span>
            <span class="font-semibold text-xs block opacity-50">5 spots disponibles (Enero del 2026)</span> 
        </button>

    </div>

   <div class="mountain-footer-divider md:bottom-0 bottom-[-180px]">
    <svg viewBox="120 0 1240 120" preserveAspectRatio="none">

        <!-- Capa 1 -->
        <polygon points="-40,120 20,40 80,120 160,35 240,120 320,30 400,120 480,45 560,120 640,35 720,120 800,40 880,120 960,30 1040,120 1120,45 1200,120"
                opacity="0.95" class="shape-fill"/>

        <!-- Capa 2 -->
        <polygon points="-40,120 40,50 120,120 220,45 320,120 420,40 520,120 620,55 720,120 820,45 920,120 1040,50 1200,120"
                opacity="0.75" class="shape-fill"/>

        <!-- Capa 3 -->
        <polygon points="-40,120 60,60 180,120 300,55 420,120 540,50 660,120 780,60 900,120 1040,55 1200,120"
                opacity="0.55" class="shape-fill"/>

        <!-- Capa 4 -->
        <polygon points="-40,120 80,70 220,120 360,65 500,120 640,60 780,120 920,70 1060,120 1200,120"
                opacity="0.45" class="shape-fill"/>

        <!-- Capa 5 -->
        <polygon points="-40,120 100,80 260,120 420,75 580,120 740,70 900,120 1060,80 1200,120"
                opacity="0.6" class="shape-fill"/>

        <!-- Capa 6 -->
        <polygon points="-40,120 120,90 300,120 480,85 660,120 840,90 1020,120 1200,120"
                opacity="0.4" class="shape-fill"/>

        <!-- Capa 7 -->
        <polygon points="-40,120 140,95 340,120 540,92 740,120 940,95 1200,120"
                opacity="0.5" class="shape-fill"/>

        <!-- Capa 8 -->
        <polygon points="-40,120 180,100 420,120 660,98 900,120 1200,120"
                opacity="0.35" class="shape-fill"/>

        <!-- Capa 9 -->
        <polygon points="-40,120 220,105 480,120 740,102 1000,120 1200,120"
                opacity="0.2" class="shape-fill"/>

        <!-- Capa 10 -->
        <polygon points="-40,120 280,110 600,120 920,115 1200,120"
                opacity="0.25" class="shape-fill"/>

    </svg>
</div>
</main>

<script>
    // Animación del botón CTA
    const ctaButton = document.getElementById('button-cta');
    if (ctaButton) {
        ctaButton.addEventListener('click', () => {
            console.log('CTA clicked - Redirigir a formulario de auditoría');
            alert('Redirigiendo al formulario de auditoría...')
        });
    }
</script>


<style>
.mountain-footer-divider {
    position: absolute;
    left: 50%;
    width: 100vw;
    overflow: hidden;
    line-height: 0;
    background-color: transparent;

    /* CLAVE */
    transform: translateX(-50%);
}

.mountain-footer-divider svg {
    position: relative;
    display: block;
    width: calc(130% + 1.3px);
    height: 80px;
}

.mountain-footer-divider .shape-fill {
    fill: #808080; /* Color base gris */
}


@media (max-width: 768px) {
    .mountain-footer-divider svg {
        width: calc(200% + 1.3px); /* Hacemos 'zoom' en móvil para que no se vean muy pequeñas */
        height: 100px;
    }
}
</style>