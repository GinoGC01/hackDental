---
import '../styles/global.css';
import Header from '../components/Header.astro';
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HackDental - Auditoría de Marketing Gratuita</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bree+Serif&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Oswald:wght@200..700&display=swap" rel="stylesheet">
    <meta name="description" content="Obtén una auditoría de marketing digital gratuita para tu clínica dental. Identifica oportunidades de crecimiento y mejora tu presencia en línea con HackDental.">
    <meta name="keywords" content="auditoría de marketing dental, marketing digital para clínicas dentales, crecimiento de clínicas dentales, presencia en línea dental, HackDental">
    <meta name="author" content="Jose Whittembury">
    <link rel="icon" type="image/png" href="/favicon.svg">

</head>
<body class="bg-gradient-to-b from-[#0a0a0a] via-[#1a1a1a] to-[#0a0a0a] text-white min-h-screen overflow-x-hidden font-inter">
    <!-- Degradado de fondo central -->
    <div class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-4/5 h-3/5 pointer-events-none -z-10">
        <div class="w-full h-full bg-primary/15 blur-[120px] rounded-full"></div>
    </div>

    <Header />
    <slot />
    <!-- Footer -->
    <footer class="text-center py-10 border-t border-white/10 mt-16">
        <a href="#contacto" class="text-gray-400 text-sm hover:text-primary transition-colors duration-300">
            Contacto 
        </a>
    </footer>

</body>
</html>
