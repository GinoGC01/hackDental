              <select 
                required 
                name="ingresos" 
                id="input-revenue" 
                class="w-full px-4 py-3 rounded-lg bg-[#1a1a1a] border border-gray-700 text-white focus:border-brand-red focus:ring-1 focus:ring-brand-red/50 outline-none transition-all"
              >
                <option value="">Selecciona un rango...</option>
                <option value="0-50k">Menos de 50.000‚Ç¨</option>
                <option value="50k-100k">50.000‚Ç¨ - 100.000‚Ç¨</option>
                <option value="100k-250k">100.000‚Ç¨ - 250.000‚Ç¨</option>
                <option value="250k-500k">250.000‚Ç¨ - 500.000‚Ç¨</option>
