---
// src/layouts/BaseLayout.astro
import '../styles/globalEbook.css';
import Footer from '../components/Ebook/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Ebook Gratis - Marketing Dental',
  description = 'Descarga tu ebook gratuito sobre estrategias de marketing dental'
} = Astro.props;


---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;400;600;700;900&family=Oswald:wght@700&display=swap" rel="stylesheet">
  <meta name="description" content={description}>
  <title>{title}</title>
</head>
<body class="min-h-screen bg-[#080808]">
  <slot />
  <Footer/>
</body>
</html>