---
// src/components/PopupForm.astro
import ArrowRight from "../../Icons/Ebook/ArrowRight.astro"
import Lock from "../../Icons/Candado.astro"
import X from "../../Icons/X.astro"
import CheckCircle from "../../Icons/Ebook/CheckCircle.astro"
import Loader2 from "./Loader2.astro"
import CornerRightDown from "../../Icons/Ebook/CornerRightDown.astro"
import Sparkles from "../../Icons/Ebook/Sparkles.astro"

---

<div id="popup-form" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/90 backdrop-blur-md animate-fadeIn">
  <div class="bg-[#111] rounded-xl shadow-[0_0_50px_rgba(217,32,39,0.15)] max-w-md w-full relative overflow-hidden border border-white/10">
    
    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-brand-red to-transparent opacity-70"></div>
    <div class="absolute -top-10 -right-10 w-24 h-24 bg-brand-red/20 rounded-full blur-2xl cursor-pointer-events-none"></div>

    <button 
      id="popup-close"
      class="absolute top-4 right-4 text-gray-500 hover:text-white transition-colors z-20 cursor-pointer"
    >
      <X size="16"/>
    </button>

    <div class="w-full bg-[#222] h-1 mt-0 relative">
      <div 
        id="progress-bar"
        class="bg-gradient-to-r from-brand-red to-orange-500 h-1 transition-all duration-500 ease-out shadow-[0_0_10px_rgba(217,32,39,0.5)]"
        style="width: 33.33%"
      />
    </div>

    <div class="p-8 relative z-10">
      <form id="step-1" class="space-y-5">
        <div class="text-center mb-6">
          <span class="inline-flex items-center gap-1.5 bg-[#d4af37]/10 text-[#d4af37] text-[10px] font-bold px-2 py-1 rounded uppercase tracking-widest border border-[#d4af37]/20">
            <Sparkles size="20" color="#bd9d33"/> Paso 1 de 2
          </span>
          <h3 class="text-2xl font-bold font-heading text-white mt-4 leading-tight">
            ¬øA d√≥nde enviamos tu copia <span class="text-brand-red">GRATUITA?</span> üéÅ
          </h3>
          <p class="text-gray-400 text-sm mt-2">
            Ingresa tus datos para recibir el acceso inmediato al ebook.
          </p>
        </div>

        <div class="space-y-5">
          <div class="group/field">
            <div class="flex justify-between items-end mb-1.5">
              <label class="block text-xs font-bold text-gray-500 uppercase tracking-wider group-focus-within/field:text-[#16a34a] transition-colors duration-300">Tu Nombre</label>
              
              <div class="text-[10px] font-bold flex items-center gap-1 transition-all duration-300">
                 <span class="flex items-center gap-1 text-brand-red animate-pulse group-focus-within/field:hidden">
                   Empieza aqu√≠ <CornerRightDown color="#D92027" />
                 </span>
                 <span class="hidden group-focus-within/field:flex items-center gap-1 text-[#16a34a]">
                   Escribiendo... <Sparkles size="20" color="#16a34a" />
                 </span>
              </div>
            </div>
            
            <div class="relative group/input">
              <div class="absolute -inset-0.5 bg-gradient-to-r from-brand-red to-red-600 rounded-lg blur opacity-60 animate-pulse group-focus-within/input:from-[#16a34a] group-focus-within/input:to-emerald-500 group-focus-within/input:animate-none group-focus-within/input:opacity-100 transition-all duration-700"></div>
              
              <input
                required
                autofocus
                type="text"
                name="name"
                id="input-name"
                placeholder="Ej. Dr. Juan P√©rez"
                class="relative w-full px-4 py-3 rounded-lg bg-[#1a1a1a] border border-brand-red text-white placeholder-gray-500 focus:outline-none focus:border-[#16a34a] focus:ring-1 focus:ring-[#16a34a]/50 shadow-[0_0_20px_rgba(217,32,39,0.2)] focus:shadow-[0_0_25px_rgba(22,163,74,0.3)] transition-all duration-300 z-10"
              />
            </div>
          </div>

          <div>
            <label class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-1.5">Tu Mejor Email</label>
            <input
              required
              type="email"
              name="email"
              id="input-email"
              placeholder="juan@clinicadental.com"
              class="w-full px-4 py-3 rounded-lg bg-[#1a1a1a] border border-gray-700 text-white placeholder-gray-600 focus:border-brand-red focus:ring-1 focus:ring-brand-red/50 outline-none transition-all"
            />
          </div>
        </div>

        <button
          type="submit"
          id="btn-step-1"
          class="w-full bg-gradient-to-r from-[#16a34a] via-[#fbbf24] to-[#16a34a] bg-[length:200%_auto] animate-gradient-xy text-black font-black text-lg py-3.5 rounded-lg shadow-[0_4px_0_#14532d] hover:shadow-[0_6px_0_#14532d] hover:scale-[1.02] active:shadow-none active:translate-y-[4px] transition-all flex items-center justify-center gap-2 mt-6 uppercase tracking-wide border-t border-white/40 cursor-pointer"
        >
          CONTINUAR <ArrowRight size="20" color="#000000" />
        </button>
        
        <p class="text-[10px] text-center text-gray-500 flex items-center justify-center gap-1.5 mt-4">
          <Lock size="12" color="#697284"/> Tus datos est√°n 100% seguros y encriptados.
        </p>
      </form>

      <form id="step-2" class="hidden space-y-5">
        <div class="text-center mb-6">
          <span class="inline-flex items-center gap-1.5 bg-[#d4af37]/10 text-[#d4af37] text-[10px] font-bold px-2 py-1 rounded uppercase tracking-widest border border-[#d4af37]/20">
            <Sparkles size="20" color="#16a34a" /> Paso Final
          </span>
          <h3 class="text-2xl font-bold font-heading text-white mt-4 leading-tight">
            Unos detalles sobre tu cl√≠nica ü¶∑
          </h3>
          <p class="text-gray-400 text-sm mt-2">
            Esto nos ayuda a enviarte contenido relevante.
          </p>
        </div>

        <div class="space-y-5">
          <div class="group/field">
             <div class="flex justify-between items-end mb-1.5">
              <label class="block text-xs font-bold text-gray-500 uppercase tracking-wider group-focus-within/field:text-[#16a34a] transition-colors duration-300">Tel√©fono (WhatsApp)</label>
              
              <div class="text-[10px] font-bold flex items-center gap-1 transition-all duration-300">
                 <span class="flex items-center gap-1 text-brand-red animate-pulse group-focus-within/field:hidden">
                   √öltimo paso <CornerRightDown className="w-3 h-3" />
                 </span>
                 <span class="hidden group-focus-within/field:flex items-center gap-1 text-[#16a34a]">
                   Casi listo <Sparkles size="20" color="#16a34a" />
                 </span>
              </div>
            </div>
            
            <div class="relative group/input">
              <div class="absolute -inset-0.5 bg-gradient-to-r from-brand-red to-red-600 rounded-lg blur opacity-60 animate-pulse group-focus-within/input:from-[#16a34a] group-focus-within/input:to-emerald-500 group-focus-within/input:animate-none group-focus-within/input:opacity-100 transition-all duration-700"></div>
              
              <input
                required
                autofocus
                type="tel"
                name="phone"
                id="input-phone"
                placeholder="+34 600 000 000"
                class="relative w-full px-4 py-3 rounded-lg bg-[#1a1a1a] border border-brand-red text-white placeholder-gray-500 focus:outline-none focus:border-[#16a34a] focus:ring-1 focus:ring-[#16a34a]/50 shadow-[0_0_20px_rgba(217,32,39,0.2)] focus:shadow-[0_0_25px_rgba(22,163,74,0.3)] transition-all duration-300 z-10"
              />
            </div>
          </div>

          <div>
            <label class="block text-xs font-bold text-gray-500 uppercase tracking-wider mb-1.5">¬øEres el due√±o de la cl√≠nica?</label>
            <select
              name="role"
              id="input-role"
              class="w-full px-4 py-3 rounded-lg bg-[#1a1a1a] border border-gray-700 text-white focus:border-brand-red focus:ring-1 focus:ring-brand-red/50 outline-none transition-all"
            >
              <option value="owner">S√≠, soy el due√±o/director üë®‚Äç‚öïÔ∏è</option>
              <option value="manager">Soy el gerente/recepcionista üë©‚Äçüíº</option>
              <option value="marketer">Soy de marketing üìà</option>
              <option value="student">Soy estudiante üéì</option>
            </select>
          </div>
        </div>

        <button
          type="submit"
          id="btn-step-2"
          class="w-full bg-gradient-to-r from-[#16a34a] via-[#fbbf24] to-[#16a34a] bg-[length:200%_auto] animate-gradient-xy text-black font-black text-lg py-3.5 rounded-lg shadow-[0_4px_0_#14532d] hover:shadow-[0_6px_0_#14532d] hover:scale-[1.02] active:shadow-none active:translate-y-[4px] transition-all flex items-center justify-center gap-2 mt-6 uppercase tracking-wide border-t border-white/40 group cursor-pointer"
        >
           DESCARGAR AHORA GRATIS <span class="group-hover:translate-x-1 transition-transform">üöÄ</span>
        </button>
      </form>

      <div id="step-3" class="hidden text-center py-6 animate-fadeIn">
        <div class="w-20 h-20 bg-[#16a34a]/20 border-2 border-[#16a34a] rounded-full flex items-center justify-center mx-auto mb-6 shadow-[0_0_30px_rgba(22,163,74,0.3)]">
          <CheckCircle size="55" color="#16a34a" />
        </div>
        <h3 class="text-3xl font-bold font-heading text-white mb-3">
          ¬°Felicidades! üéâ
        </h3>
        <p class="text-lg text-gray-300 mb-6 leading-relaxed">
          Tu copia de <strong class="text-white">"Secretos Millonarios del Marketing Dental"</strong> est√° en camino a tu bandeja de entrada. üì©
        </p>
        <div class="bg-yellow-900/20 p-4 rounded border border-yellow-700/30 text-sm text-yellow-200/80 mb-8">
          <p class="font-bold text-yellow-500 mb-1 flex items-center justify-center gap-1">‚ö†Ô∏è IMPORTANTE:</p>
          Si no lo ves en 5 minutos, revisa tu carpeta de SPAM o Promociones.
        </div>
        <button 
          id="popup-close-final"
          class="text-gray-500 hover:text-white font-medium text-sm transition-colors cursor-pointer"

        >
          Volver a la p√°gina principal
        </button>
      </div>
    </div>
    
    <div class="bg-[#0a0a0a] px-8 py-4 text-center border-t border-white/5 relative z-10">
       <p class="text-[10px] text-gray-600 uppercase tracking-widest font-bold">
         Hackdental ‚Ä¢ Marketing para Odont√≥logos ü¶∑
       </p>
    </div>
  </div>
</div>

<script>
  let currentStep = 1;
  const formData = {
    name: '',
    email: '',
    phone: '',
    role: 'owner'
  };

  const popup = document.getElementById('popup-form');
  const closeBtn = document.getElementById('popup-close');
  const closeFinalBtn = document.getElementById('popup-close-final');
  const progressBar = document.getElementById('progress-bar');
  const step1Form = document.getElementById('step-1');
  const step2Form = document.getElementById('step-2');
  const step3Div = document.getElementById('step-3');

  function openPopup() {
    popup?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closePopup() {
    popup?.classList.add('hidden');
    document.body.style.overflow = '';
    currentStep = 1;
    updateUI();
  }

  function updateUI() {
    const progress = (currentStep / 3) * 100;
    if (progressBar) progressBar.style.width = `${progress}%`;

    step1Form?.classList.toggle('hidden', currentStep !== 1);
    step2Form?.classList.toggle('hidden', currentStep !== 2);
    step3Div?.classList.toggle('hidden', currentStep !== 3);
  }

  function simulateLoading(callback: () => void) {
    const btn = document.getElementById(`btn-step-${currentStep}`) as HTMLButtonElement;
    if (btn) {
      btn.disabled = true;
      btn.innerHTML = '<svg class="w-5 h-5 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';
    }
    setTimeout(() => {
      if (btn) btn.disabled = false;
      callback();
    }, 800);
  }

  step1Form?.addEventListener('submit', (e) => {
    e.preventDefault();
    formData.name = (document.getElementById('input-name') as HTMLInputElement).value;
    formData.email = (document.getElementById('input-email') as HTMLInputElement).value;
    
    simulateLoading(() => {
      currentStep = 2;
      updateUI();
    });
  });

  step2Form?.addEventListener('submit', (e) => {
    e.preventDefault();
    formData.phone = (document.getElementById('input-phone') as HTMLInputElement).value;
    formData.role = (document.getElementById('input-role') as HTMLSelectElement).value;
    
    simulateLoading(() => {
      currentStep = 3;
      updateUI();
    });
  });

  closeBtn?.addEventListener('click', closePopup);
  closeFinalBtn?.addEventListener('click', closePopup);

  document.querySelectorAll('[data-popup-trigger]').forEach(trigger => {
    trigger.addEventListener('click', openPopup);
  });

  popup?.addEventListener('click', (e) => {
    if (e.target === popup) closePopup();
  });
</script>