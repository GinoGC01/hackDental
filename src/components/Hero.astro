---
import ButtonCTAHero from "./Buttons/ButtonCTAHero.astro";
import ProfileCard from "./Cards/ProfileCard.astro";
import Mountains from "./Decorations/Mountains.astro";
import TopSpainFlag from "./TopSpainFlag.astro";
---

<main class="text-center pt-10 md:pt-10 md:max-w-4xl mx-auto px-[16px] md:px-4 h-[100vh]">
    <p class="hero-subtitle uppercase ">
        <span class="text-[#eb4423] md:text-lg text-[14px]">ATENCIÓN</span> <span class="md:text-lg text-[14px]">DUEÑO DE CLÍNICA DENTAL</span>
    </p>
    
    <h1 class="mb-2 w-full">
        <span class="font-oswald block text-[24px] md:text-[40px] font-bold uppercase tracking-tighter text-[#d9d9d9]">
            RECIBE UNA
        </span>
        <span class="font-oswald text-[24px] md:text-[40px] font-bold uppercase drop-shadow-[0_0_30px_rgba(1,219,176,0.40)] bg-[#039683]/10 px-2 rounded-md inline-block border-1 border-[#01dbb0]/10 tracking-tighter w-full md:w-auto">
            AUDITORÍA DE MARKETING  <span class="text-[#01dbb0]">GRATUITA</span>
        </span>
    </h1>
    <p class="font-oswald text-[22px] md:text-[40px] font-bold uppercase text-[#d9d9d9]">Y APRENDE COMO CONVERTIR TU</p>

    <div class="flex gap-1 items-center justify-center">
    <p class="font-oswald text-[22px] md:text-[40px] font-bold uppercase text-[#d9d9d9]">CONSULTORIO EN EL</p>
    <TopSpainFlag />
    </div>

    <!-- CTA Section -->
    <div class="max-w-2xl mx-auto">
        <!-- Profile Section -->
            
        <div class="flex flex-col items-center justify-center gap-1 mb-8">
            <div class="flex gap-3 items-center flex-row mt-3">
                <p class="text-base md:text-xl text-gray-400">Trabaja con</p>
                <ProfileCard />
            </div>
               
            <p class="text-base md:text-xl text-gray-400">
                para potenciar el marketing de tu consultorio.
            </p>
        </div>
        </div>

        <!-- CTA Button -->
        <ButtonCTAHero />
        <strong class="font-light text-sm mt-4 block text-[#9e9e9e]">
            sin tarjeta de crédito requerida.
        </strong>
    </div>
    <Mountains />
   
</main>

